using namespace std;
const int INF=0x3f3f3f3f;
const int N=1e5+10;

int a,b,x,y;

signed main(){
	
	freopen("teleport.in","r",stdin);
	freopen("teleport.out","w",stdout);
	ios::sync_with_stdio(false);
	cin.tie(0);
	cin>>a>>b>>x>>y;
	cout<<min(abs(b-a),min(abs(a-x)+abs(b-y),abs(a-y)+abs(b-x)))<<endl;
	return 0;
}

